set(CMAKE_SYSTEM_NAME Windows)
set(CMAKE_SYSTEM_PROCESSOR i686) 
set(LLVM_MINGW_PATH "C:/llvm-mingw" CACHE PATH "Path to LLVM-MinGW installation")
set(CMAKE_C_COMPILER "${LLVM_MINGW_PATH}/bin/i686-w64-mingw32-clang.exe")
set(CMAKE_CXX_COMPILER "${LLVM_MINGW_PATH}/bin/i686-w64-mingw32-clang++.exe")
set(CMAKE_LINKER "${LLVM_MINGW_PATH}/bin/ld.lld.exe")  
set(CMAKE_AR "${LLVM_MINGW_PATH}/bin/llvm-ar.exe")  
set(CMAKE_RANLIB "${LLVM_MINGW_PATH}/bin/llvm-ranlib.exe")  
set(CMAKE_FIND_ROOT_PATH "${LLVM_MINGW_PATH}") 
set(CMAKE_FIND_FRAMEWORK FIRST)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
set(CMAKE_CXX_STANDARD_LIBRARIES "-lc++")
set(CMAKE_C_COMPILER_TARGET "i686-w64-mingw32") 
set(CMAKE_CXX_COMPILER_TARGET "i686-w64-mingw32") 
set(CMAKE_GENERATOR "Ninja")
set(CMAKE_EXE_LINKER_FLAGS "-fuse-ld=lld")
set(CMAKE_MODULE_LINKER_FLAGS "-fuse-ld=lld")
set(CMAKE_SHARED_LINKER_FLAGS "-fuse-ld=lld")
